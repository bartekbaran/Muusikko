{% extends "index.twig" %}

{% block content %}
<nav class="navbar navbar-expand-lg navbar-dark black-navbar" style="z-index: 100;">
	<img style="height: 42px; width: 42px; padding: 0;" src="logo.png" class="navbar-brand">
	<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
		<span class="navbar-toggler-icon"></span>
	</button>
	<div class="collapse navbar-collapse" id="navbarNav">
		<ul class="navbar-nav">
			<li class="nav-item">
				<a class="nav-link" href="/home">Home<span class="sr-only">(current)</span></a>
			</li>
			<li class="nav-item">
				<a class="nav-link" href="/draw">Draw</a>
			</li>
			<li class="nav-item">
				<a class="nav-link" href="/chat">Chat</a>
			</li>
		</ul>
		<ul class="navbar-nav ml-auto">
			<li class="nav-item">
				<a class="nav-link" href="/logout">Log out</a>
			</li>
		</ul>
	</div>
</nav>
	<div class="container-fluid" style="background-color: #EFD7DC">
		<div class="row h-100">
			<div class="col-md-1" style="background-color: transparent; max-width: 75px;"></div>
			<div class="col-md-2" style="background-color: #161616; min-height: 100vh; height: 100%;">
				<nav class="nav flex-column">
		  			<a style="margin-top: 15px;" class="nav-link text" href="/home">Overview</a>
		  			<a class="nav-link text" href="/edit_info">Edit profile</a>
		  			<a class="nav-link text" href="/edit_photo">Edit photo</a>
		  			<a class="nav-link text" href="/change_password">Change password</a>
				</nav>
			</div>
			<div class="col-md-2" style="background-color: transparent;"></div>
			<div class="col-md-5 text-center" style="background-color: #f5f5f5;">
			    <form action="/change" method="POST">
	                <div class="row">
	                	<div class="col-4" align="right">
	                		<b><p style="margin-top: 50px">Old password: </p></b>
		                </div>
		                <div class="col-8" align="left">
		                	<p><input type="password" style="padding: 2px; border-radius: 5px; margin-top: 50px; width: 70%" name="oldPsw" required></p>
		                </div>
		            </div>
		            <div class="row">
	                	<div class="col-4" align="right">
	                		<b><p>New password:</p></b>
		                </div>
		                <div class="col-8" align="left">
		                	<p><input type="password" style="padding: 2px; border-radius: 5px; width: 70%" name="newPsw" required></p>
		                </div>
		            </div>
		            <div class="row">
	                	<div class="col-4" align="right">
	                		<b><p>Repeat your new password: </p></b>
		                </div>
		                <div class="col-8" align="left">
		                	<p><input type="password" style="padding: 2px; border-radius: 5px; width: 70%" name="newPswRepeat" required></p>
		                </div>
		            </div>
		            {% if flag == 1 %}
		            	<span style="color: red; margin-bottom: 20px;">There was an error setting up your new password.</span>
		            {% elseif flag == 2 %}
		            	<span style="color: red; margin-bottom: 20px;">New password doesn't match.</span>
		            {% elseif flag == 3 %}
		            	<span style="color: red; margin-bottom: 20px;">Incorrect old password.</span>
		            {% endif %}

		            <p><input style="margin-top: 20px;" type="submit" class="button brown-button" value="Edit password"></p>
		        </form>
			</div>
			<div class="col-md-2" style="background-color: transparent;"></div>
		</div>
	</div>
</div>
{% endblock %}