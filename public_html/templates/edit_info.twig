{% extends "index.twig" %}

{% block content %}
<nav class="navbar navbar-expand-lg navbar-dark black-navbar">
	<div class="col-md-1" style="background-color: transparent; max-width: 75px; padding-left: 0px">
		<img style="height: 40px; width: 40px; padding: 0;" src="logo.png" class="navbar-brand">
	</div>
	<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
		<span class="navbar-toggler-icon"></span>
	</button>
	<div class="col-md-11" style="padding-left: 0px">
		<div class="collapse navbar-collapse" id="navbarNav">
			<div class="col-md-2" style="background-color: transparent; padding-left: 0px; width: 200px;">
				<ul class="navbar-nav">
					<li class="nav-item">
						<a class="nav-link" href="/home">Home<span class="sr-only">(current)</span></a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="/draw">Draw</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="/chat">Chat</a>
					</li>
				</ul>
			</div>
			<div class="col-md-4" style="background-color: transparent;">
				<ul class="navbar-nav" style="width: 100%;">
					<form action="/search" method="POST">
						<input type="text" placeholder="Search" name="search" style="padding: 5px;">
					</form>
				</ul>
			</div>
			<div class="col-md-5" style="background-color: transparent;"></div>
			<div class="col-md-1 text-right" style="padding-right: 0px;">
				<ul class="navbar-nav ml-auto">
					<li class="nav-item">
						<a class="nav-link" href="/logout">Log out</a>
					</li>
				</ul>
			</div>
		</div>
	</div>
</nav>
<div class="container-fluid" style="background-color: #EFD7DC">
	<div class="row h-100">
		<div class="col-md-1" style="background-color: transparent; max-width: 75px;"></div>
		<div class="col-md-2" style="background-color: #161616;">
			<nav class="nav flex-column">
		  		<a style="margin-top: 15px;" class="nav-link text" href="/home">Overview</a>
		  		<a class="nav-link text" href="/edit_info">Edit profile</a>
		  		<a class="nav-link text" href="/edit_photo">Edit photo</a>
		  		<a style="margin-bottom: 15px;" class="nav-link text" href="/change_password">Change password</a>
			</nav>
		</div>
		<div class="col-md-2" style="background-color: transparent;"></div>
		<div class="col-md-5" align="center" style="background-color: #f5f5f5; min-width: 500px;">
            <img style="margin-top: 50px; width: 70%; max-height: 400px; max-width: 400px;" src="/uploads/{{photo}}" class="rounded" alt="Image">
            <form action="/edit_info" method="POST">
	            <div class="row">
	                <div class="col-3" align="right">
	                	<b><p style="margin-top: 50px">Nickname: </p></b>
		            </div>
		            <div class="col-9" align="left">
		                <p><input type="text" style="padding: 2px; border-radius: 5px; margin-top: 50px; width: 82%" name="editedName" value="{{ nickname }}" required></p>
		            </div>
		        </div>
		        <div class="row">
	                <div class="col-3" align="right">
	                	<b><p>Gender:</p></b>
		            </div>
		            <div class="col-9" align="left">
		                <p><select placeholder="Gender" name="editedGender" value="{{ gender }}" style="padding: 2px; border-radius: 5px; width: 82%;">
							<option value="gender">Gender</option>
							<option value="Woman">Woman</option>
							<option value="Man">Man</option>
							<option value="Dunno">Prefer not to say</option>
						</select></p>
		            </div>
		        </div>
		        <div class="row">
	                <div class="col-3" align="right">
	                	<b><p>Birth: </p></b>
		            </div>
		            <div class="col-9" align="left">
		                <p><input type="number" placeholder="Day" name="editedDay" min="1" max="31" style="width: 20%; padding: 2px; border-radius: 5px;" required>
						<select placeholder="Month" name="editedMonth" style="padding: 2px; border-radius: 5px; width: 40%;">
							<option value="month">Month</option>
							<option value="January">January</option>
							<option value="February">February</option>
							<option value="March">March</option>
							<option value="April">April</option>
							<option value="May">May</option>
							<option value="June">June</option>
							<option value="July">July</option>
							<option value="August">August</option>
							<option value="September">September</option>
							<option value="October">October</option>
							<option value="November">November</option>
							<option value="December">December</option>
						</select>
						<input style="width: 20%; padding: 2px; border-radius: 5px;" type="number" placeholder="Year" name="editedYear" min="1990" max="2021" required></p>
		            </div>
		        </div>
		        <div class="row">
	                <div class="col-3" align="right">
	                	<b><p>City: </p></b>
		            </div>
		            <div class="col-9" align="left">
		                <p><input type="text" style="padding: 2px; border-radius: 5px; width: 82%" name="editedCity" value="{{ city }}" required></p>
		            </div>
		        </div>
		        <div class="row">
	                <div class="col-3" align="right">
	                	<b><p>Description: </p></b>
		            </div>
		            <div class="col-9" align="left">
		                <p><input type="text" style="padding: 2px; border-radius: 5px; width: 82%" name="editedDesc" value="{{ description }}" required></p>
		            </div>
		        </div>
		        {% if flag == 1 %}
		            <span style="color: red; margin-bottom: 20px;">You have to choose gender to edit your profile.</span>
		        {% elseif flag == 2 %}
		            <span style="color: red; margin-bottom: 20px;">You have to choose month to edit your profile.</span>
		        {% endif %}
		        <p><input type="submit" class="button brown-button" value="Edit information"></p>
		    </form>
        </div>
        <div class="col-md-2" style="background-color: transparent;"></div>
    </div>
</div>
{% endblock %}