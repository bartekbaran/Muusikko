{% extends "index.twig" %}

{% block content %}
<nav class="navbar navbar-expand-lg navbar-dark black-navbar">
    <img style="height: 42px; width: 42px; padding: 0;" src="/logo.png" class="navbar-brand">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/home">Home<span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/draw">Draw</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/chat">Chat</a>
            </li>
        </ul>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" href="/logout">Log out</a>
            </li>
        </ul>
    </div>
</nav>

<div class="container text-center">
    <form action="/add_photo" method="post" enctype="multipart/form-data">
        <p style="margin-top: 50px;">Select image to upload:</p>
        <p><input style="margin-left: 20px;" type="file" name="fileToUpload" id="fileToUpload"></p>
        <p><input type="submit" value="Upload Image" name="submit" class="button brown-button"></p>
    </form>
    {% if x == 1 %}
        <span style="color: red; margin-bottom: 20px;">File is not an image.</span>
    {% elseif x == 2 %}
        <span style="color: red; margin-bottom: 20px;">Sorry, file already exists.</span>
    {% elseif x == 3 %}
        <span style="color: red; margin-bottom: 20px;">Sorry, your file is too large.</span>
    {% elseif x == 4 %}
        <span style="color: red; margin-bottom: 20px;">Sorry, only JPG, JPEG, PNG & GIF files are allowed.</span>
    {% elseif x == 5 %}
        <span style="color: red; margin-bottom: 20px;">There was an error uploading your file.</span>
    {% endif %}
</div>
{% endblock %}